<% title t(".title") %>

<p>
  <%= label_tag :currency, t(".currency") %>
  <%= select_tag :currency, options_for_select(@currencies.each_with_index.map{|x,i| [ (x[0] + ' - ' +  x[1]), x[0], {'data-content'=>"<div><div class='value'>"+(x[0] + '<span class="name"> - ' +  x[1] + "</span>")+"</div><button type='button' class='close-option' data-dismiss='alert' aria-label='Close' data-id='"+i.to_s+"'>×</button></div>", title: 'blah' } ] }, params[:currency].split(',')), 
        include_blank: false,
        :'data-live-search' => "true",
        :'data-selected-text-format' => "count > 1",
        :'data-size' => "7",
        class: 'selectpicker filter-currency'%>
</p>
<p>
  <%= label_tag :currency, t(".bank") %>
  <%= select_tag :currency, options_for_select(@banks.each_with_index.map{|x,i| [ x[1], x[0], {'data-content'=>"<div><div class='value'>"+(x[4] + '<span class="name"> - ' +  x[1] + "</span>")+"</div><button type='button' class='close-option' data-dismiss='alert' aria-label='Close' data-id='"+i.to_s+"'>×</button></div>" } ] }, params[:bank].split(',')), 
        include_blank: false, multiple: true,
        :'data-live-search' => "true",
        :'data-selected-text-format' => "count > 5",
        :'data-size' => "7",
        class: 'selectpicker filter-bank'%>
</p>
